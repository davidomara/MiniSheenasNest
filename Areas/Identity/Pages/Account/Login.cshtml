@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid">
    <div class="row login-container">
        <!-- Left Side - Image Section -->
        <div class="col-md-6 login-image" style="background-image: url('/images/sheena.jpg'); background-size: cover; background-position: center;">
        </div>

        <!-- Right Side - Login Form -->
        <div class="col-md-6 login-form-container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
            <section class="login-form text-center" style="width: 80%;">
                <h2>Log in</h2>
                <hr />
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <button id="login-submit" type="submit" class="btn btn-primary w-100">Log in</button>
                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                <input class="form-check-input" asp-for="Input.RememberMe" /> Remember me?
                            </label>
                        </div>
                    </div>
                    <div class="row g-2 mt-3">
                        <div class="col-md-4">
                            <button class="btn btn-outline-primary w-100" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-outline-success w-100" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-outline-info w-100" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
